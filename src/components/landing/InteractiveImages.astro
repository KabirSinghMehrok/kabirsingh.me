---
import InteractiveImagesComponent from "./InteractiveImages.jsx";
---

<InteractiveImagesComponent client:load>
  <slot />
</InteractiveImagesComponent>

<style is:global>
  .resizable-draggable {
    width: 100px;
    height: 100px;
    position: absolute;
    border: 2px solid #3b82f6;
    touch-action: none;
    user-select: none;
    box-sizing: border-box;
  }

  .resize-handle {
    position: absolute;
    width: 10px;
    height: 10px;
    background-color: white;
    border: 1px solid #3b82f6;
  }

  .top-left {
    top: -5px;
    left: -5px;
    cursor: nwse-resize;
  }
  .top-right {
    top: -5px;
    right: -5px;
    cursor: nesw-resize;
  }
  .bottom-left {
    bottom: -5px;
    left: -5px;
    cursor: nesw-resize;
  }
  .bottom-right {
    bottom: -5px;
    right: -5px;
    cursor: nwse-resize;
  }
</style>
