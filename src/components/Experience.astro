---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'div'> & {
  start: string;
  end: string;
  jobTitle: string;
  company: string;
  description: string;
};

const {start, end, jobTitle, company, description, class: className, ...props } = Astro.props;
---

<div class="flex flex-col gap-1" {...props}>
  <div class="flex flex-col md:flex-row gap-0 md:gap-2 justify-between items-start md:items-center">
    <p class="text-[18px] font-sans font-medium">{jobTitle} at {company}</p>
    <p class="text-[18px] font-serif italic">{start} - {end}</p>
  </div>
  <p class="text-[15px] font-sans font-light">{description}</p>
</div>

